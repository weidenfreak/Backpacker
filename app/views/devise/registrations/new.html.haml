%h2 Sign up
= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:form => 'role'} ) do |f|
  = f.semantic_errors
  = devise_error_messages!
  = f.input :email, as: :email
  = f.input :password, as: :password
  = f.input :password_confirmation, as: :password, required: true
  = f.action :submit, label: "Sign up", button_html: { :class => "btn btn-default"}
= render "devise/shared/links"
